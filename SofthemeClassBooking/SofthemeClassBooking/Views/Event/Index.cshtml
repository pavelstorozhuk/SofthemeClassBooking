                <div class="email">user1@softheme.com.ua</div>
                <i class="fa fa-times" aria-hidden="true"></i>
            </div>

            <div class="participant">
                <div class="circle"></div>
                <div class="email">user1@softheme.com.ua</div>
                <i class="fa fa-times" aria-hidden="true"></i>
            </div>

        </div>
    </div>

</div>


