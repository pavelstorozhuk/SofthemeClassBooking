@using Microsoft.AspNet.Identity
@model SofthemeClassBooking.Models.EventViewModel

@section stylesDeclarationInHeader {
    @Styles.Render("~/bundles/styles/plan")
    @Styles.Render("~/bundles/styles/event")
}
<div class="eventpage">
    <div class="eventpage-info">

        <div class="title">@Model.Event.Title</div>

        <div class="author">
            <i class="fa fa-user"></i>
            <div class="event-creator-name">@Model.Author</div>
        </div>

        <div class="description">
            @Model.Event.Description
        </div>


        <div class="participants">
            <span>Планируют принять участие <span>@Model.ParticipantCount</span> человек</span>
            @if (@Model.Event.IsParticipantsAllowed)
            {
                if (Model.Event.UserId == User.Identity.GetUserId())
                {
                    <input id="Email" name="Email" type="text" placeholder="Вы уже принимаете участие в событии" required disabled />
                }
                else
                {
                    using (Html.BeginForm("Add", "Participant", FormMethod.Post, new { id = "add-participant-form" }))
                    {<div class="participant-add">
                <span>Присоединиться</span>
                <input id="add-participant-email" name="Email" type="text" placeholder="Укажите e-mail чтобы присоединиться" required />
                <i id="add-participant-from-event-submit" class="fa fa-plus fa-lg"></i>
                <input type="hidden" name="EventId" value="@Model.Event.Id" />
            </div>
                    }
                }

            }
            else
            {
                <input id="Email" name="Email" type="text" placeholder="Событые уже свершилось" required disabled />
            }

        </div>


    </div>

    <div class="eventpage-calendar-section">

        <div class="eventpage-calendar">
            <div class="eventpage-calendar-header">

                <div class="datetime">
                    <div class="cell-icon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </div><!----><div class="cell">
                        <div class="up"><i class="fa fa-sort-up"></i></div>
                        <div class="value">18</div>
                        <div class="down"><i class="fa fa-sort-desc" aria-hidden="true"></i></div>
                    </div><!----><div class="delimeter">
                        <span>.</span>
                    </div><!----><div class="cell">
                        <div class="up"><i class="fa fa-sort-up"></i></div>
                        <div class="value">05</div>
                        <div class="down"><i class="fa fa-sort-desc" aria-hidden="true"></i></div>
                    </div><!----><div class="delimeter">
                        <span>.</span>
                    </div><!----><div class="cell">
                        <div class="up"><i class="fa fa-sort-up"></i></div>
                        <div class="value">16</div>
                        <div class="down"><i class="fa fa-sort-desc" aria-hidden="true"></i></div>
                    </div>

                </div>


                <div class="datetime">
                    <div class="cell-icon-time">
                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                    </div><!----><div class="cell">
                        <div class="up"><i class="fa fa-sort-up"></i></div>
                        <div class="value">18</div>
                        <div class="down"><i class="fa fa-sort-desc" aria-hidden="true"></i></div>
                    </div><!----><div class="delimeter">
                        <span>:</span>
                    </div><!----><div class="cell">
                        <div class="up"><i class="fa fa-sort-up"></i></div>
                        <div class="value">05</div>
                        <div class="down"><i class="fa fa-sort-desc" aria-hidden="true"></i></div>
                    </div><!----><div class="time-delimeter">
                        <span>-</span>
                    </div><!----><div class="cell">
                        <div class="up"><i class="fa fa-sort-up"></i></div>
                        <div class="value">16</div>
                        <div class="down"><i class="fa fa-sort-desc" aria-hidden="true"></i></div>
                    </div><!----><div class="delimeter">
                        <span>:</span>
                    </div><!----><div class="cell">
                        <div class="up"><i class="fa fa-sort-up"></i></div>
                        <div class="value">05</div>
                        <div class="down"><i class="fa fa-sort-desc" aria-hidden="true"></i></div>
                    </div>

                </div>

            </div>

            <div class="icon-section">
                <div class="icon-position">
                    <i class="fa fa-calendar-plus-o"></i>
                    <i class="fa fa-envelope-o"></i>
                    <i class="fa fa-print"></i>
                </div>
            </div>

            <div class="button-section">
                <button class="cancel">Отмена</button>
                <button class="save">Сохранить</button>
            </div>

            <div class="error-section">
                <div class="icon">
                    <i class="fa fa-frown-o"></i>
                </div>

                <div class="message">
                    <span>Эта аудитория занята на выбранное время. Выберите, пожалуйста, другое.</span>
                </div>

            </div>

        </div>

    </div>


    <div class="participant-list">
        <div class="header">Зарегистрирование участники:</div>

        <div class="participant-section">

            <div class="participant">
                <div class="circle"></div>
                <div class="email">user1@softheme.com.ua</div>
                <i class="fa fa-times" aria-hidden="true"></i>
            </div>

            <div class="participant">
                <div class="circle"></div>
                <div class="email">user1@softheme.com.ua</div>
