
@{
    ViewBag.Title = "ForgotPasswordResult";
    Layout = "~/Views/Shared/_LayoutAuthorization.cshtml";
}


<div class="registration-wrapper">
    <div class="registration-parallelogram">
        <div class="registration-inner-inner-parallelogram">
        </div>

        <div class="registration-inner-parallelogram">
            <p id="title"> Смена пароля </p>

            <div class="registration-inner-inner-parallelogram2">
            </div>

        </div>

        <div class="registration-form">
            <p align="center">
                На указанный адресс электронной почты<br />
                успешно было отправлено письмо с<br />
                инструкцией по смене пароля
                
            </p>
            
        </div>
    </div>
    <div class="registration-logo">
        <a href="@Url.Action("Index", "Home")">
            <img width="162px" src="~/Content/images/logo-gray.png" />
        </a>

        <br>
        <br>
        <!-- 552 596 -->
        <hr id="hr-style">
        <br>
        <p>
            <a id="Enter" style="cursor: pointer;" class="notselect">Вход</a>
        </p>
        <p>
            <a style="cursor: pointer" id="Registration" class="notselect">Регистрация</a>
        </p>
        <p>
            <a style="cursor: pointer" id="ChangePassword" class="notselect">Смена пароля</a>
        </p>


    </div>
</div>

<script>





    $(function () {
        $("#Enter")
            .on('click',
                function () {
                    $.get('@Url.Action("Enter")')
                        .done(function (result) {
                            $('.registration-form').html(result);
                            if ($('#Enter').hasClass('notselect')) {
                                $('#Enter').removeClass('notselect');
                                $('#Enter').addClass('select');
                            }

                            if ($('#Registration').hasClass('select')) {
                                $('#Registration').removeClass('select');
                                $('#Registration').addClass('notselect');
                            }
                            if ($('#ChangePassword').hasClass('select')) {
                                $('#ChangePassword').removeClass('select');
                                $('#ChangePassword').addClass('notselect');
                            }
                            $("#title").text("Вход");
                        });

                });
    });
    $(function () {
        $("#Registration")
            .on('click',
                function () {
                    $.get('@Url.Action("Registration")')
                        .done(function (result) {
                            $('.registration-form').html(result);
                            if ($('#Registration').hasClass('notselect')) {
                                $('#Registration').removeClass('notselect');
                                $('#Registration').addClass('select');
                            }
                            if ($('#Enter').hasClass('select')) {
                                $('#Enter').removeClass('select');
                                $('#Enter').addClass('notselect');
                            }
                            if ($('#ChangePassword').hasClass('select')) {
                                $('#ChangePassword').removeClass('select');
                                $('#ChangePassword').addClass('notselect');
                            }
                            $("#title").text("Регистрация");

                        });

                });
    });

    $(function () {
        $("#ChangePassword")
            .on('click',
                function () {
                    $.get('@Url.Action("ChangePassword")')
                        .done(function (result) {
                            $('.registration-form').html(result);
                            if ($('#Enter').hasClass('select')) {
                                $('#Enter').removeClass('select');
                                $('#Enter').addClass('select');
                            }

                            if ($('#Registration').hasClass('select')) {
                                $('#Registration').removeClass('select');
                                $('#Registration').addClass('notselect');
                            }
                            if ($('#ChangePassword').hasClass('notselect')) {
                                $('#ChangePassword').removeClass('notselect');
                                $('#ChangePassword').addClass('select');
                            }
                            $("#title").text("Смена пароля");
                        });

                });
    });

</script>



