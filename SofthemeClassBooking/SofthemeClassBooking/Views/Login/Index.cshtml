@using SofthemeClassBooking.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutAuthorization.cshtml";
}


<div>
    <div class="registration-wrapper">
        <div class="registration-parallelogram">
            <div class="registration-inner-inner-parallelogram">
            </div>

            <div class="registration-inner-parallelogram">
                <p id="title"> Вход </p>

                <div class="registration-inner-inner-parallelogram2">
                </div>

            </div>

            <div class="registration-form">



                @using (Html.BeginForm("SofthemeLogin", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Адрес электронной почты" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Пароль", type = "password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" });

                    <input type="submit" value="Войти" id="submit">
                }

            </div>
        </div>
        <div class="registration-logo">
            <a href="@Url.Action("Index", "Home")">
                <img width="162px" src="~/Content/images/logo.png"> </img>
            </a>

            <br>
            <br>
            <!-- 552 596 -->
            <hr id="hr-style">
            <br>
            <p>
                <a id="Enter" style="cursor: pointer" class="registration-select"><strong>Вход</strong></a>
            </p>
            <p>
                <a style="cursor: pointer" id="Registration" class="registration-notselect"><strong>Регистрация</strong></a>
            </p>
            <p>
                <strong><a style="cursor: pointer" id="ChangePassword" class="registration-notselect">Смена пароля</a></strong>
            </p>


        </div>
    </div>
</div>
<script>
    $(function () {
        $("#Enter").on('click', function () {
            $.get('@Url.Action("Enter")').done(function (result) {
                $('form').html(result);
                if ($('#Enter').hasClass('registration-notselect')) {
                    $('#Enter').removeClass('registration-notselect')
                    $('#Enter').addClass('registration-select');
                }

                if ($('#Registration').hasClass('registration-select')) {
                    $('#Registration').removeClass('registration-select');
                    $('#Registration').addClass('registration-notselect');
                }
                if ($('#ChangePassword').hasClass('registration-select')) {
                    $('#ChangePassword').removeClass('registration-select');
                    $('#ChangePassword').addClass('registration-notselect');
                }
                $("#title").text("Вход");
            });

        });
    })
    $(function () {
        $("#Registration").on('click', function () {
            $.get('@Url.Action("Registration")').done(function (result) {
                $('form').html(result);
                if ($('#Registration').hasClass('registration-notselect')) {
                    $('#Registration').removeClass('registration-notselect')
                    $('#Registration').addClass('registration-select');
                }
                if ($('#Enter').hasClass('registration-select')) {
                    $('#Enter').removeClass('registration-select');
                    $('#Enter').addClass('registration-notselect');
                }
                if ($('#ChangePassword').hasClass('registration-select')) {
                    $('#ChangePassword').removeClass('registration-select');
                    $('#ChangePassword').addClass('registration-notselect');
                }
                $("#title").text("Регистрация");

            });

        });
    })
    $(function () {
        $("#ChangePassword").on('click', function () {
            $.get('@Url.Action("ChangePassword")').done(function (result) {
                $('form').html(result);
                if ($('#ChangePassword').hasClass('registration-notselect')) {
                    $('#ChangePassword').removeClass('registration-notselect')
                    $('#ChangePassword').addClass('registration-select');
                }
                if ($('#Enter').hasClass('registration-select')) {
                    $('#Enter').removeClass('registration-select');
                    $('#Enter').addClass('registration-notselect');
                }
                if ($('#Registration').hasClass('registration-select')) {
                    $('#Registration').removeClass('registration-select');
                    $('#Registration').addClass('registration-notselect');
                }
                $("#title").text("Смена пароля");
            });

        });
    })
</script>

