
@{
    ViewBag.Title = "ConfirmChangePassword";
    Layout = "~/Views/Shared/_LayoutAuthorization.cshtml";
}
@model SofthemeClassBooking.Models.ResetPasswordViewModel


@section Title
{
    <p id="title"> Смена пароля </p>
}

            


           @using (Html.BeginForm("ResetPassword", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
           {   
            @Html.AntiForgeryToken()
               <br/>
               <br/>
    <div class="registration-form-incorrect-block">
        @Html.ValidationSummary()
    </div>
               @Html.HiddenFor(m=>m.Email)
               @Html.HiddenFor(m => m.Code)
    <div class="registration-form-incorrect-block">
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "registration-form-incorrect-block" });
    </div>
        @Html.TextBoxFor(m => m.Password, new { @id = "Password", placeholder = "Пароль", type = "password" })
    <div class="registration-form-incorrect-block">
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "registration-form-incorrect-block" });
    </div>
        @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Пароль", type = "password" })
        <input style="width:100px" class="button-refuse" type="submit" value="Сохранить" id="mysubmit" />

        }


        @section Menu
            {
            <p> @Html.ActionLink("Вход", "Index", "Login", null, new { style = "cursor: pointer;", @class = "notselect" })</p>

            <p>@Html.ActionLink("Регистрация", "Registration", "Login", null, new { style = "cursor: pointer; text-decoration: none;font-weight: bold", @class = "select" })</p>

            <p>@Html.ActionLink("Смена пароля", "ForgotPassword", "Login", null, new { style = "cursor: pointer; text-decoration: none;", @class = "notselect" })</p>

        }

        @Scripts.Render("~/bundles/jqueryval")








