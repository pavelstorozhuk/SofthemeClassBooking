<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/layout")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/map")
</head>
<body>
<nav>
    <div class="containerLogo">
        <a href="@Url.Action("Index", "Home")">
            <img src="~/Content/images/logo.png" alt="Softheme" />
        </a>

    </div>

    <div class="containerNav">
        <div>
            <ul>
                <li>
                    <a href="@Url.Action("Schedule", "Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Schedule") ? "class=current" : "")>
                        <div class="nav-text">Рассписание</div>
                    </a>
                    <div @(ViewContext.RouteData.Values["action"].ToString().Equals("Schedule") ? "class=nav-line-display" : "class=nav-line-hide")></div>
                </li>
                <li>
                    <a href="@Url.Action("Feedback", "Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Feedback") ? "class=current" : "")>
                        <div class="nav-text">Обратная связь</div>
                    </a>
                    <div @(ViewContext.RouteData.Values["action"].ToString().Equals("Feedback") ? "class=nav-line-display" : "class=nav-line-hide")></div>
                </li>
                <li>
                    <a href="#"><div class="nav-text">Вход</div></a>
                    <div class="nav-line"></div>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Html.Partial("Map","Home")

<footer>
        <div class="container">
            <div class="image">
                <img src="~/Content/images/logo-gray.png" alt="Softheme" />
            </div>
            <div class="line">
                <hr />
            </div>
            <div class="text">
                Все права защищены &copy;
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>
